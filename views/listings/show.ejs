<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col-8 offset-3">
    <br>
    <h3>Listing Details</h3>
      
  </div>  
  <div class="col-6 offset-3">
    <div class="card show-card" style="width: 100%;">
      <img src="<%=listing.image%>" class="card-img-top" alt="">
      <div class="card-body">
        <p class="card-text"> 
          <b><%=listing.title%></b> <br>
          <%=listing.description%> <br> 
          &#8377;<%=listing.price.toLocaleString('en-IN')%> <br>
          <%=listing.country%> <br>
          <%=listing.location%> <br>
        </p>
      </div>
    </div>
  </div>
  <div class="col-12 offset-3 show-btns mb-4">
    <a class="btn btn-dark edit-btn col-1 " href="/listings/<%=listing._id%>/edit">Edit</a>
    <br> <br>
    <form method="post" action="/listings/<%=listing._id%>/?_method=DELETE">
      <button class="btn btn-dark offset-4 col-12">Delete</button>
    </form>
  </div>
    
    
    
  </div>
</div>
